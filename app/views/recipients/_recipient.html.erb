<% if recipient.email !=nil %>
	<p>
		<strong>Email:</strong>
		<%= recipient.email %>
	</p>
	<p>
		<strong>Associated public key:</strong><br>
		<%= simple_format(recipient.pub_key) %>
	</p>
	<p>
  	<%= button_to "Remove Recipient #{recipient.email}", [recipient.dist_group, recipient], class: 'redbutton',
               method: :delete %>
	</p>
<% else %>
<% end %>
