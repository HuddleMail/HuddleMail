<p id="notice"><%= notice %></p>

<h1>Listing Distribution Groups</h1>

<table>
  <thead>
    <tr>
      <th>Distribution Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dist_groups.each do |dist_group| %>
      <tr>
        <td><%= dist_group.dist_name %></td>
        <td><%= link_to 'Show', dist_group %></td>
        <td><%= link_to 'Edit', edit_dist_group_path(dist_group) %></td>
        <td><%= link_to 'Destroy', dist_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

