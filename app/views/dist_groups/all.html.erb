<p id="notice"><%= notice %></p>
<h1>Your Distribution Groups</h1>
<table>
  <thead>
    <tr>
      <th>Distribution Group Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dist_groups.each do |dist_group| %>
      <tr>
        <td><h1><%= dist_group.dist_name %></h1></td>
        <td><%= button_to 'Show', dist_group, class: 'greenbutton', :method => :get %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

