<p id="notice"><%= notice %></p>

<h1>Listing All Distribution Groups</h1>

<table>
  <thead>
    <tr>
      <th>Distribution Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dist_groups.each do |dist_group| %>
      <tr>
        <td><%= link_to dist_group.dist_name, dist_group %></td>
        <td><%= link_to 'Show', dist_group %></td>
        <td><%= link_to 'Destroy', dist_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Distribution group', new_dist_group_path %>
